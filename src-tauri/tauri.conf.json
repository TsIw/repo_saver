{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "RepoSaver",
  "version": "1.1.1",
  "identifier": "t.app.repo-saver",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Repo Saver",
        "label": "main",
        "width": 1000,
        "height": 600,
        "visible": true,
        "devtools": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/icon.ico"
    ],
    "windows": {
      "wix": {
        "language": [
          "ja-JP"
        ]
      },
      "nsis": {
        "languages": [
          "Japanese"
        ]
      }
    }
  }
}